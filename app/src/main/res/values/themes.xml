<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Here" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <item name="colorAccent">@color/orange_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorSecondaryVariant">@color/orange_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonTheme">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:elevation">0dp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InputTheme">
        <item name="android:drawablePadding">6dp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorEditText</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textSize">16sp</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/orange_500</item>
        <item name="colorControlHighlight">@color/orange_500 </item>
    </style>

</resources>
